.getPhoneNumberBtn{
  width: 570rpx;
  height: 90rpx;
  background-color: rgb(255, 92, 30);
  border-radius: 45rpx;
  margin-left: 90rpx;
  overflow: hidden;
  position: relative;
  z-index: 1;
}
.getPhoneNumberBtn-text{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 90rpx;
  line-height: 90rpx;
   position: relative;
  z-index: 1;
}
.getPhoneNumberBtn-text .icon_wechat{
  display: block;
  width: 40rpx;
  margin-right: 19rpx;
}
.getPhoneNumberBtn-text text{
  font-size: 36rpx;
  color: #fff;
}
.getPhoneNumberBtn button.getPhoneNumber{
  width: 570rpx;
  height: 90rpx;
  line-height:90rpx;
  padding-left:0;
  padding-right:0;
  color:rgba(255, 255, 255,1);
  background-color:#DEDEDE;
  border: none;
  border-radius:0;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 99;
  opacity: 0;
}
.getPhoneNumber-tips{
  margin-top: 28rpx;
}
.getPhoneNumber-tips>text{
  display: block;
  font-size: 24rpx;
  color: rgb(170, 170, 170);
   text-align: center;
}

